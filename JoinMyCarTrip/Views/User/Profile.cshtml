@model JoinMyCarTrip.Application.Models.Users.ProfileUserViewModel

<div class="card card-primary card-outline">
    <div class="card-body box-profile">
        <div class="text-center">
            <img class="profile-user-img img-fluid img-circle"
                 src="@Model.GravatarLink"
                 alt="User profile picture">
        </div>

        <h3 class="profile-username text-center">@Model.FullName</h3>

    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->
<!-- About Me Box -->

<div class="row">
    <div class="col-md-12 col-sm-6 col-12">
        <div class="info-box">
            <span class="info-box-icon bg-danger"><i class="far fa-star"></i></span>

            <div class="info-box-content">
                <span class="info-box-text">Likes</span>
                <span class="info-box-number">@Model.Likes</span>
            </div>
            <!-- /.info-box-content -->
        </div>
        <!-- /.info-box -->
    </div>
</div>

<div class="card card-primary">
    <div class="card-body">
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Full Name</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" value="@Model.FullName" disabled>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" value="@Model.Email" disabled>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputName2" class="col-sm-2 col-form-label">Phone</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" value="@Model.Phone" disabled>
            </div>
        </div>
    </div>
</div>
<div>
<div class="form-group text">
    <div class="button-holder">
        <a href="/Trip/MyTrips" class="btn btn-primary float-right">My trips</a>
    </div>
</div>
</div>
<br></br>
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Pets</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        @foreach (var pet in @Model.Pets)
        {
            <div class="callout callout-info">
                <h5>@pet.Type</h5>

                <p>@pet.Description</p>
            </div>
        }
    </div>
</div>

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Comments from passengers</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        @foreach (var comment in @Model.Comments)
        {
            <div class="callout callout-info">
                <h5>@comment.Author</h5>

                <p>@comment.Description</p>
                <small>@comment.Date</small>
            </div>
        }
    </div>
</div>