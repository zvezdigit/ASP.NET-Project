@using JoinMyCarTrip.Application.Models.Cars
@using JoinMyCarTrip.Application.Models.Trips

<!-- Main content -->
<section class="content">
    <form method="post" action="/User/AddProfileInfo">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <h1>Personal Data</h1>

                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">My Data</h3>

                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="inputFullName">Full Name</label>
                            <input type="text" name="FullName" class="form-control">     
                        </div>
                        <div class="form-group">
                            <label for="inputUsername">Username</label>
                            <input type="text" name="Username" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="phoneNumber">Phone Number</label>
                            <input type="text" name="Phone Number" class="form-control">
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <div class="col-md-3"></div>
        </div>
        <div class="row pb-3">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <button type="submit" class="btn btn-success float-left">Add</button>
            </div>
        </div>
    </form>
</section>