<div class="card">
    <div class="card-header">
        <h3 class="card-title">My Cars</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped projects">
            <thead>
                <tr>
                    <th style="width: 1%">
                        #
                    </th>
                    <th style="width: 20%">
                        Car
                    </th>
                    <th style="width: 30%">
                        Model- Year
                    </th>
                    <th style="width: 20%">
                        Seats
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < 7; i++)
                {
                    <tr>
                        <td>
                            #
                        </td>
                        <td>
                            <a>
                               Audi
                            </a>
                            <br />
                            <small>
                               Year: 2020
                            </small>
                        </td>
                        <td>
                            <ul class="list-inline">
                                <li class="list-inline-item">
                                    <img alt="Avatar" class="table-avatar" src="https://carwow-uk-wp-3.imgix.net/Volvo-XC40-white-scaled.jpg?auto=format&cs=tinysrgb&fit=clip&ixlib=rb-1.1.0&q=10&w=460">
                                </li>
                            </ul>
                        </td>
                        <td>
                            5
                        </td>
                       
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
<div class="form-group text">
    <div class="button-holder">
        <a href="/Car/AddCar" class="btn btn-primary btn-block text">Add a new Car</a>
    </div>
