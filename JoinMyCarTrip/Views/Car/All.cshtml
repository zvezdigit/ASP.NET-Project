@model JoinMyCarTrip.Application.Models.Cars.AllCarsViewModel

<div class="card">
    <div class="card-header">
        <h3 class="card-title">My Cars</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped projects">
            <thead>
                <tr>
                    <th style="width: 1%">
                        #
                    </th>
                    <th style="width: 20%">
                        Car
                    </th>
                    <th style="width: 30%">
                        Image
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var car in @Model.Cars)
                {
                    <tr>
                        <td>
                            #
                        </td>
                        <td>
                            <a>
                                @car.BrandAndModel
                            </a>
                            <br />
                            <small>
                                @car.Year
                            </small>
                        </td>
                        <td>
                            <ul class="list-inline">
                                <li class="list-inline-item">
                                    <img width="300" class="brand-image img" src="@car.ImageUrl">
                                </li>
                            </ul>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
<div class="form-group text">
    <div class="button-holder">
        <a href="/Car/AddCar" class="btn btn-primary btn-block text">Add a Car</a>
    </div>
</div>
<!-- /.card -->
