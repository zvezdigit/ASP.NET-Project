@model JoinMyCarTrip.Application.Models.Trips.TripDetailsViewModel

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Trip</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <div class="form-group">
            <img width="500" src="@Model.CarImage" />
        </div>
        <div class="form-group">
            <label><a href="/User/Profile/@Model.TripOrganizerId">Trip Organizer</a></label>
            <input asp-for="TripOrganizer" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label>Start Point</label>
            <input asp-for="@Model.StartPoint" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label>End Point</label>
            <input asp-for="@Model.EndPoint" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label>Departure Time</label>
            <input asp-for="@Model.DepartureTime" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label>Seats</label>
            <input asp-for="@Model.Seats" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label>Trip type</label>
            <input asp-for="@Model.TripType" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label>Car</label>
            <input asp-for="@Model.CarModel" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label>Car Details</label>
            <div class="form-check">
                <input asp-for="@Model.AirConditioner" class="form-check-input" onclick="return false;" />
                <label class="form-check-label">Air Conditioner</label>
            </div>
            <div class="form-check">
                <input asp-for="@Model.Smoking" class="form-check-input" onclick="return false;" />
                <label class="form-check-label">Smoking</label>
            </div>
            <div class="form-check">
                <input asp-for="@Model.LuggageAllowed" class="form-check-input" onclick="return false;" />
                <label class="form-check-label">Luggage</label>
            </div>
            <div class="form-check">
                <input asp-for="@Model.PetsAllowed" class="form-check-input" onclick="return false;" />
                <label class="form-check-label">Pets Allowed</label>
            </div>
        </div>
    </div>
</div>

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">All messages</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        @foreach (var message in @Model.Messages)
        {
            <div class="callout callout-info">
                <h5>@message.Author</h5>

                <p>@message.Text</p>
                 <small>@message.Date</small>
            </div>
        }
    </div>
</div>

<div class="form-group text-center">
     <form asp-action="JoinTrip" asp-controller="Trip" method="post">
           <input type="hidden" name="TripId" value="@Model.TripId" />
    <div class="button-holder">
         <button type="submit"class="btn btn-primary btn-block text-uppercase">Join</button>
    </div>
    </form>
</div>


 
                   
                     


