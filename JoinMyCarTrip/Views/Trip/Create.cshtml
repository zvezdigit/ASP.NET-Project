@using JoinMyCarTrip.Application.Models.Cars
@using JoinMyCarTrip.Application.Models.Trips
@model JoinMyCarTrip.Application.Models.Trips.CreateTripViewModel

<!-- Main content -->
<section class="content">
    <form method="post" action="/Trip/Create">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <h1>Create Trip</h1>

                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Trip</h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="@Model.StartPoint" class="control-label">Start Point </label>
                        <input asp-for="@Model.StartPoint" class="form-control" />
                        <span asp-validation-for="StartPoint" class="text-danger"></span> 
                        </div>
                        <div class="form-group">
                             <label asp-for="@Model.EndPoint" class="control-label">End Point</label>
                        <input asp-for="@Model.EndPoint" class="form-control" />
                        <span asp-validation-for="EndPoint" class="text-danger"></span> 
                        </div>
                        <div class="form-group">
                             <label asp-for="@Model.DepartureTime" class="control-label">Departure Time </label>
                        <input asp-for="@Model.DepartureTime" class="form-control" placeholder="dd.MM.yyyy HH:mm />
                        <span asp-validation-for="DepartureTime" class="text-danger"></span> 
                        </div>
                        <div class="form-group">
                            <label asp-for="Car">Car</label>
                            <select class="form-control custom-select" name="CarId">
                                <option selected disabled>Select one</option>

                                @foreach(var car in @Model.Cars)
                                {@
                                    <option value="@car.CarId">@car.Model</option>
                                }
                                
                            </select>
                                   <span asp-validation-for="Car" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="seats">Seats</label>
                            <input min="2" max="7" type="number" name="Seats" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="TripType">Trip Type</label>
                            <select class="form-control custom-select" name="TripType">
                                <option selected disabled>Select one</option>

                                @foreach(var tripType in @Model.TripTypes)
                                {
                                    <option value="@tripType.Id">@tripType.Type</option>
                                        
                                }
                            </select>
                                   <span asp-validation-for="TripType" class="text-danger"></span>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <div class="col-md-3"></div>
        </div>
        <div class="row pb-3">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <button type="submit" class="btn btn-success float-left">Create</button>
            </div>
        </div>
    </form>
</section>