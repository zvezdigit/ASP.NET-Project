    @model JoinMyCarTrip.Application.Models.Messages.TextMessageFormViewModel

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Message</h3>
    </div>
     
    <form asp-action="TextMessage" asp-controller="Message" method="post">
          <input type="hidden" name="TripId" value="@ViewBag.TripId" />
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Text" class="control-label">Text </label>
                <input asp-for="Text" textarea rows="4" class="form-control" placeholder="Enter message...." />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Send</button>
        </div>
    </form>
</div>

