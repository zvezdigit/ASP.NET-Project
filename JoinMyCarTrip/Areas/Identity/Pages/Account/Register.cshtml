

@page
@model RegisterModel

@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>

   <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/css/adminlte.min.css">
</head>

<div style="background-image: url('/img/pexels-pixabay-163688.jpg'); background-size: contain; background-repeat: no-repeat; height: 1100px">


    <div class="register-box pl-4">
                    <div class="card-header text-center">
                <a href="/" class="h1">Join My Car Trip</a>
            </div>
        <!-- /.login-logo -->
        <div class="card card-outline card-primary">

            <div class="card-body">
                <p class="register-box-msg">Create Account</p>

   <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
         <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" placeholder="Email" autocomplete="username" aria-required="true" />
                     <span class="fas fa-envelope"></span>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                 <div class="form-floating">
                    <input asp-for="Input.FullName" class="form-control" placeholder="Full Name" autocomplete="fullname" aria-required="true" />
                  
                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                </div>
                 <div class="form-floating">
                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Phone Number" autocomplete="phonenumber" aria-required="true" />
                     <span class="fas fa-phone"></span>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                  <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" placeholder="Password" autocomplete="new-password" aria-required="true" />
                         <span class="fas fa-lock"></span>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm Password" class="fas fa-lock" autocomplete="new-password" aria-required="true" />
                <span class="fas fa-lock"></span>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div>
                <br></br>
        <button id="registerSubmit" type="submit" class="btn btn-primary btn-block">Register</button>

              </form>
          </div>
        </div>
                       




<!-- jQuery -->
<script src="~/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="~/dist/js/adminlte.min.js"></script>
 <partial name="_ValidationScriptsPartial" />


</div>
</html>






















