@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>

   <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/css/adminlte.min.css">
</head>
<div style="background-image: url('/img/pexels-pixabay-163688.jpg'); background-size: contain; background-repeat: no-repeat; height: 1100px">


    <div class="login-box pl-4">
                    <div class="card-header text-center">
                <a href="/" class="h1">Join My Car Trip</a>
            </div>
        <!-- /.login-logo -->
        <div class="card card-outline card-primary">

            <div class="card-body">
                <p class="login-box-msg">Sign in here</p>

     <form id="account" method="post">
           <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" placeholder="Email" autocomplete="username" aria-required="true" />
                     <span class="fas fa-envelope"></span>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                  <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" placeholder="Password" class="fas fa-lock" autocomplete="current-password" aria-required="true" />
                         <span class="fas fa-lock"></span>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
        <div class="row">
          <div class="col-8">
            <div class="icheck-primary">
               <label asp-for="Input.RememberMe" class="form-label">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
            </div>
          </div>
          <!-- /.col -->
          <div class="col-4">
            <button id="login-submit" type="submit" class="btn btn-primary btn-block">Sign In</button>
          </div>
          <!-- /.col -->
        </div>
                       
      </form>

@*      <div class="social-auth-links text-center mb-3">
        <p>- OR -</p>
        <a href="#" class="btn btn-block btn-primary">
          <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
        </a>
        <a href="#" class="btn btn-block btn-danger">
          <i class="fab fa-google-plus mr-2"></i> Sign in using Google+
        </a>
      </div>*@
      <!-- /.social-auth-links -->

 <p class="mb-1">
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                </p>
                <p class="mb-0">
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                </p>
    </div>
    <!-- /.login-card-body -->
  </div>
</div>
<!-- /.login-box -->

<!-- jQuery -->
<script src="~/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="~/dist/js/adminlte.min.js"></script>
 <partial name="_ValidationScriptsPartial" />


</div>
</html>

















