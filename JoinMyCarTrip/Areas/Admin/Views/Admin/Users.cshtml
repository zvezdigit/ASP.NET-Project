@using JoinMyCarTrip.Application.Models.Trips
@model IEnumerable<UserTripViewModel>
@{
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Application Users</h3>
                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>User Id</th>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Image</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in @Model)
                        {
                            <tr>
                                <td>@user.UserId</td>
                                <td>@user.FullName</td>
                                <td>@user.Email</td>
                                 <td> <img height="50" alt="Avatar" class="table-avatar" src="@user.GravatarLink" data-toggle="tooltip" data-placement="right" title="@user.FullName"></td>
                                <td>
                                    <a asp-area="admin" asp-action="roles" asp-controller="admin" asp-route-id="@user.UserId" class="btn btn-info btn-sm">
                                <i class="fas fa-pencil-alt"> 

                                </i>Roles</a>
                        
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
