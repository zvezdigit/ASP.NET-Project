@using JoinMyCarTrip.Application.Models.Users
@model UserRoleViewModel
@{
  
    var items = (List<SelectListItem>)ViewBag.RoleItems;
}

   <!-- Horizontal Form -->
            <div class="card card-info">
              <div class="card-header">
                <h3 class="card-title">Change User Role</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form class="form-horizontal" id="roles" method="post">
            <input type="hidden" name="UserId" value="@Model.UserId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="card-body">
                  <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Full Name</label>
                    <div class="col-sm-10">
                      <input asp-for="FullName" class="form-control" readonly >
                    </div>
                  </div>
                  <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Roles</label>
                    <div class="col-sm-10">

                        <select asp-for="RoleId" asp-items="@items" class="form-control">
                       
                    </select>

                    </div>
                  </div>
                 
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                  <button type="submit" class="btn btn-info">Submit</button>

                </div>
                <!-- /.card-footer -->
              </form>
            </div>
            <!-- /.card -->


